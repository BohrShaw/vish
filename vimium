# Vimium for Chrome/Chromium config backup
#
# https://github.com/philc/vimium/blob/master/background_scripts/commands.coffee

map ' Marks.activateGotoMode

map t LinkHints.activateModeToOpenInNewForegroundTab
map gm LinkHints.activateModeWithQueue
map gd LinkHints.activateModeToDownloadLink
map ga LinkHints.activateModeToOpenIncognito

map T createTab
map l nextTab
map h previousTab
map U restoreTab
map < moveTabLeft
map > moveTabRight
map gX closeTabsOnLeft
map gx closeTabsOnRight
map go closeOtherTabs
map <a-t> Vomnibar.activateTabSelection
map <a-b> Vomnibar.activateBookmarks

map <a-h> scrollLeft
map <a-l> scrollRight

map ]f nextFrame
map [f mainFrame

unmap b
unmap <a-f>
unmap <c-e>
unmap <c-y>
unmap gt
unmap gT
unmap K
unmap J
unmap X
unmap <<
unmap >>

# Characters used for link hints
asdfjklewioghpqurmvnb

