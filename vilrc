" "vil" represents "vim lightweight".
" Usage: alias vil vim -u /path/to/vilrc

filetype plugin indent on

" shortcut to edit this vimrc file in a new tab
command! Vimrc :tabe ~/vimise/vimrc

" A unified runtime path(including the directory "vil")"{{{
set runtimepath=$VIM/vimfiles,$VIMRUNTIME,$VIM/vimfiles/after
" get the directory contains this sourced file vilrc
let s:vilrc_dir = expand('<sfile>:p:h')
" add the vilrc_dir/vil/(after) to 'runtimepath'
let &runtimepath = printf('%s/vil, %s, %s/vil/after', s:vilrc_dir, &runtimepath, s:vilrc_dir)
"}}}

set noswapfile
set viminfo=

" Source a common vimrc file(vicrc) shared by other vimrcs 
source <sfile>:h/vicrc

" Section: Appearance {{{1
if has('gui_running')
    color solarized
elseif has('unix')
    color molokai
else
    "color pablo
endif
" }}}1

" vim:set ft=vim et tw=78 sw=2 fdm=marker:
