" Minimal and sensible vimrc for debugging
" Examples:
" vim -u ~/.vim/vimrc.min --cmd 'set rtp+=~/.vim/bundle/vim-xxx'

set nocompatible

" Avoid sourcing personal files
set runtimepath-=~/.vim

if has('gui_running') || $termencoding ==? 'utf-8'
  set encoding=utf-8
endif

set ttimeoutlen=10

" Use --noplugin to avoid loading plugins
filetype plugin indent on

syntax enable
